{
  "name": "VideoGaze extension",
  "description": "VideoGaze description extension.",
  "version": "0.0.0.1",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Click to inject VideoGaze JS scripts."
  },
  "background": {
    "scripts": ["js/chrome/base.js", "background/background.js"],
    "persistent": false
  },
  "manifest_version": 2
}