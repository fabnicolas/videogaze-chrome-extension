{
  "name": "VideoGaze extension",
  "description": "VideoGaze description extension.",
  "version": "0.0.0.6",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Click to inject VideoGaze JS scripts."
  },
  "background": {
    "scripts": [
      "js/chrome/base.js",
      "js/chrome/extra.js",
      "js/chrome/communicator.js",
      "background/background.js"
    ]
  },
  "options_page": "options/options.html",
  "options_ui": {"page": "options/options.html"},
  "default_locale": "en",
  "manifest_version": 2
}