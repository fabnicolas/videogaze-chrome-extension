{
  "name": "VideoGaze extension",
  "description": "VideoGaze description extension.",
  "version": "0.0.0.7",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "VideoGaze - Click here."
  },
  "background": {
    "scripts": [
      "js/utils.js",
      "js/chrome/base.js",
      "js/chrome/extra.js",
      "js/chrome/communicator.js",
      "background/background.js"
    ]
  },
  "web_accessible_resources": [
    "popup-overlay/style.css",
    "popup-overlay/popup.html"
  ],
  "options_page": "options/options.html",
  "options_ui": {"page": "options/options.html"},
  "default_locale": "en",
  "manifest_version": 2
}