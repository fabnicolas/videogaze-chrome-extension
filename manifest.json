{
  "name": "VideoGaze extension",
  "description": "VideoGaze description extension.",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Click to inject VideoGaze JS scripts."
  },
  "background": {
    "scripts": ["background-general.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["cs-videogaze.js"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "manifest_version": 2
}