{
  "name": "VideoGaze extension",
  "description": "VideoGaze description extension.",
  "version": "0.0.0.3",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Click to inject VideoGaze JS scripts."
  },
  "background": {
    "scripts": ["js/chrome/base.js", "js/chrome/extra.js", "background/background.js"]
  },
  "manifest_version": 2
}